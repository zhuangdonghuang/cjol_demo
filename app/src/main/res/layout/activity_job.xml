                    android:layout_alignStart="@+id/joblist_companyname2"
                    android:layout_below="@+id/joblist_companyname2"
                    android:text="深圳市-南山区 1-3年 本科"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/joblist_job_infor2"
                    android:background="#309c9c9c" />
            </RelativeLayout>

            //3

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/joblist_job_name3"
                    android:layout_width="wrap_content"
