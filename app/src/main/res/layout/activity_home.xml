<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root_spl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/home_content_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <FrameLayout
        android:id="@+id/home_content_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2c666666"></LinearLayout>
    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/main_home_radiobutton"
                style="@style/main_menu_radio"
                android:layout_centerHorizontal="true"
                android:checked="true"
                android:drawableTop="@drawable/selector_home_rb_home"
                android:text="主页" />

            <RadioButton
                android:id="@+id/main_sociality_radiobutton"
                style="@style/main_menu_radio"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/selector_home_rb_sociality"
                android:text="工具" />

            <RadioButton
                android:id="@+id/main_share_radiobutton"
                style="@style/main_menu_radio"
                android:layout_alignParentTop="true"
                android:drawableTop="@drawable/selector_home_rb_basket"
                android:text="消息" />

            <RadioButton
                android:id="@+id/main_mine_radiobutton"
                style="@style/main_menu_radio"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/selector_home_rb_my"
                android:text="我" />
    </RadioGroup>
    </LinearLayout>
</RelativeLayout>